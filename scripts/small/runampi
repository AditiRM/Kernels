NUMPROCS=4
NUMVPROCS=8
NUMITERS=10
SEPLINE="==============================================================="
#we can pick any of the launchers put in the respective target directories
MPIRUN=AMPI/Branch/charmrun

for type in vector_go vector_stop no_vector ins_heavy; do
  $MPIRUN +p $NUMPROCS +vp $NUMVPROCS AMPI/Branch/branch           $NUMITERS 1000 $type;                  echo $SEPLINE
done
#need to fix problem with MPI_Comm_create in AMPI
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/DGEMM/dgemm               $NUMITERS 500 32 1;                      echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Nstream/nstream           $NUMITERS 2000000 0;                     echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Random/random             16 16;                                   echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Reduce/reduce             $NUMITERS 2000000;                       echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Sparse/sparse             $NUMITERS 10 4;                          echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Stencil/stencil           $NUMITERS 1000;                          echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Synch_global/global       $NUMITERS 10000;                         echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Synch_p2p/p2p             $NUMITERS 1000 100;                      echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/Transpose/transpose       $NUMITERS 2000 64;                       echo $SEPLINE
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/AMR/amr                   $NUMITERS 1000 100 2 2 1 5 FINE_GRAIN 2; echo $SEPLINE            
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/AMR/amr                   $NUMITERS 1000 100 2 2 1 5 HIGH_WATER;   echo $SEPLINE            
$MPIRUN +p$NUMPROCS +vp$NUMVPROCS AMPI/AMR/amr                   $NUMITERS 1000 100 2 2 1 5 NO_TALK;      echo $SEPLINE            
