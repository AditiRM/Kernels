#############################################################################
# Grappa prototype make file

# This sets variables such that GNU Make's implicit rules will work
# for compiling basic Grappa programs with compilers supporting
# GNU-compatible flags. The file is automatically generated by CMake
# when Grappa is configured and built.

# To use this file, write a Makefile including lines like these:
# > include /lustre/home/rfvander/grappa/build/Make+Release/util/grappa.mk
# > grappa_app: grappa_app.o

# This uses Make's implicit rules, so "make grappa_app" will look for
# grappa_app.cpp, compile it into grappa_app.o, and link grappa_app.o
# into a binary named grappa_app.

# The GNU Make implicit compilation recipe for C++ files which turns a
# file n.cpp/n.cc/n.C into n.o looks like: 
# $(CXX) $(CPPFLAGS) $(CXXFLAGS) -c -o n.o n.cpp

# The GNU Make implicit link recipe that turns n.o into an executable n is:
# $(CC) $(LDFLAGS) n.o $(LOADLIBES) $(LDLIBS) -o n

# Grappa source files are relative to /lustre/home/rfvander/grappa
# Grappa binary files are relative to /lustre/home/rfvander/grappa/build/Make+Release
#############################################################################

# MPI header paths should automatically be included in CXXFLAGS by
# CMake, so use the plain C++ compiler (but mpicxx should be fine too)
CXX=/opt/intel/tools/impi/5.0.1.035/intel64/bin/mpigxx

# MPI libraries should automatically be included in CXXFLAGS by
# CMake, so use the plain C++ compiler (but mpicxx should be fine too)
CC=/opt/intel/tools/impi/5.0.1.035/intel64/bin/mpigxx
LD=/opt/intel/tools/impi/5.0.1.035/intel64/bin/mpigxx

#############################################################################
# compilation flags
#############################################################################

# this is used by the C++ implicit compile rule
CXXFLAGS= -DENABLE_RDMA_AGGREGATOR  -std=c++11 -Winline -Wno-inline -mno-red-zone  -O3 -g -DNDEBUG  \
	-I/lustre/home/rfvander/grappa/build/Make+Release/third-party/include \
	-I/lustre/home/rfvander/grappa/third-party/graph500-generator \
	-I/usr/include \
	-I/lustre/home/rfvander/grappa/system \
	-I/lustre/home/rfvander/grappa/system/tasks

#############################################################################
# link flags
#############################################################################

# this is used by the C++ implicit link rule
LDFLAGS=    \
	-L/lustre/home/rfvander/grappa/build/Make+Release/system \
	-L/lustre/home/rfvander/grappa/build/Make+Release/third-party/lib \
	-L/lustre/home/rfvander/grappa/build/Make+Release/third-party/graph500-generator \
	-L/usr/lib64

# this is used by the C++ implicit link rule
LDLIBS=-Wl,-Bstatic  \
	-lGrappa \
	-lglog \
	-lgflags \
	-lgraph500-generator \
	-Wl,-Bdynamic  \
	-lpthread \
	-lrt \
	-lboost_system-mt \
	-lboost_filesystem-mt

p2p: p2p.o
	$(CC) $(LDFLAGS) p2p.o $(LOADLIBES) $(LDLIBS) -o p2p

